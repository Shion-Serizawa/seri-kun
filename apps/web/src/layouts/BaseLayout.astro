---
import '../styles/global.css';
import TotalVisits from '../components/shared/TotalVisits.astro';
import styles from './BaseLayout.module.css';

type Props = {
  title: string;
  description?: string;
};

const { title, description } = Astro.props;
const canonicalUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url;
const cfAnalyticsToken = import.meta.env.PUBLIC_CF_ANALYTICS_TOKEN;
const cfAnalyticsBeacon =
  typeof cfAnalyticsToken === 'string' && cfAnalyticsToken.length > 0
    ? JSON.stringify({ token: cfAnalyticsToken, spa: false })
    : null;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {description ? <meta name="description" content={description} /> : null}
    <link rel="canonical" href={canonicalUrl} />
    <slot name="head" />
    {cfAnalyticsBeacon ? (
      <script
        is:inline
        defer
        src="https://static.cloudflareinsights.com/beacon.min.js"
        data-cf-beacon={cfAnalyticsBeacon}
      />
    ) : null}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <a class="skip-link" href="#main">本文へスキップ</a>

    <header class={styles.siteHeader}>
      <div class="container">
        <div class={styles.headerInner}>
          <a class={styles.siteTitle} href="/">
            <span class={styles.siteTitleMark} aria-hidden="true"></span>
            <span class={styles.siteTitleWord}>seri-kun</span>
          </a>
          <nav class={styles.nav} aria-label="Primary">
            <a class={styles.navLink} href="/works">Works</a>
            <a class={styles.navLink} href="/blog">Blog</a>
          </nav>
        </div>
      </div>
    </header>

    <main id="main" class={styles.main}>
      <div class="container">
        <slot />
      </div>
    </main>

    <footer class={styles.footer}>
      <div class="container">
        <div class={styles.footerInner}>
          <TotalVisits
            wrapperClass={styles.visits}
            labelClass={styles.visitsLabel}
            valueClass={styles.visitsValue}
          />
          <div class={styles.analyticsNote}>Analytics: Cloudflare Web Analytics (cookie-less)</div>
        </div>
      </div>
    </footer>
  </body>
</html>
