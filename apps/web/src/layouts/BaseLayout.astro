---
import '../styles/global.css';
import styles from './BaseLayout.module.css';

type Props = {
  title: string;
  description?: string;
};

const { title, description } = Astro.props;
const canonicalUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {description ? <meta name="description" content={description} /> : null}
    <link rel="canonical" href={canonicalUrl} />
    <slot name="head" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <a class="skip-link" href="#main">本文へスキップ</a>

    <header class={styles.siteHeader}>
      <div class="container">
        <div class={styles.headerInner}>
          <a class={styles.siteTitle} href="/">
            <span class={styles.siteTitleMark} aria-hidden="true"></span>
            <span class={styles.siteTitleWord}>seri-kun</span>
          </a>
          <nav class={styles.nav} aria-label="Primary">
            <a class={styles.navLink} href="/works">Works</a>
            <a class={styles.navLink} href="/blog">Blog</a>
          </nav>
        </div>
      </div>
    </header>

    <main id="main" class={styles.main}>
      <div class="container">
        <slot />
      </div>
    </main>

    <footer class={styles.footer}>
      <div class="container">
        <div class={styles.footerInner}>
          <div class={styles.visits}>
            <span class={styles.visitsLabel}>Total Visits:</span>
            <span class={styles.visitsValue} aria-label="Total visits (not yet loaded)">—</span>
          </div>
          <div class={styles.analyticsNote}>Analytics: Cloudflare Web Analytics (cookie-less)</div>
        </div>
      </div>
    </footer>
  </body>
</html>
